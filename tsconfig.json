{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": false,

        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,

        "skipLibCheck": true,
        "allowJs": true,
        // "checkJs": true,

        "strict": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist/*", "src/static"],
    "lib": ["es6"]
}

